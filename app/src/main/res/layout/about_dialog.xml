<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:text="Crypto trading tools - v1.2"
            android:textColor="@color/materialWhite"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_below="@id/textView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_above="@id/textView2"
            android:gravity="center"
            android:text="Grazie a:"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView4"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="CoinMarketCap public APIs" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:autoLink="web"
                android:gravity="center"
                android:text="https://coinmarketcap.com/" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView7"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Cryptocurrency icons" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:autoLink="web"
                android:gravity="center"
                android:text="https://github.com/cjdowner/cryptocurrency-icons" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/textView8"
            android:layout_below="@id/textView5"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightGreyMaterial" />

        <TextView
            android:id="@+id/textView9"
            android:layout_below="@id/textView8"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="Se l'app ti piace, supportami con una piccola donazione!"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_below="@id/textView9"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="left|center_vertical"
            android:text="BTC: 14gfwxxJ4BMG6RdnU8WegpCz9ZFqvxhcuw"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/textView11"
            android:layout_below="@id/textView10"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="ETH: 0x552C3C3cA11b365b6D234b58C3E58A3f944dFE81"
            android:textIsSelectable="true" />

        <ImageView
            android:layout_below="@id/textView5"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="0.5dp"
            android:background="@color/lightGreyMaterial" />

        <RelativeLayout
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="10dp"
            android:gravity="left|center_vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView14"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="developed by Giovanni Rosa"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:autoLink="email"
                android:gravity="center"
                android:text="giovanni.rosa1@virgilio.it" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textColor="@color/colorPrimary"

                android:textStyle="italic"
                android:text="Un particolare ringraziamento a Stefano Dalla Palma per l'ordinamento dei campi in base ai dati di mercato e le variazioni di prezzo." />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
