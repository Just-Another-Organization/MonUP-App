<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="giovanni.tradingtoolkit.settings.AboutActivity"
    tools:showIn="@layout/activity_about">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_above="@id/textView2"
            android:gravity="center"
            android:text="@string/about_thanks"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView4"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="CoinMarketCap public APIs" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:autoLink="web"
                android:gravity="center"
                android:text="https://coinmarketcap.com/" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView20"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Crypto Compare public APIs" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:autoLink="web"
                android:gravity="center"
                android:text="https://www.cryptocompare.com/" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView7"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Cryptocurrency icons" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:autoLink="web"
                android:gravity="center"
                android:text="https://github.com/cjdowner/cryptocurrency-icons" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/textView8"
            android:layout_below="@id/textView5"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightGreyMaterial" />

        <TextView
            android:id="@+id/textView9"
            android:layout_below="@id/textView8"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="@string/about_support"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_below="@id/textView5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:autoLink="web"
            android:gravity="center"
            android:text="@string/github"
            android:textIsSelectable="true" />

        <ImageView
            android:layout_below="@id/textView5"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="0.5dp"
            android:background="@color/lightGreyMaterial" />

        <RelativeLayout
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="left|center_vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView14"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="developed by Giovanni Rosa"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:autoLink="email"
                android:gravity="center"
                android:text="giovanni.rosa1@virgilio.it" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="10dp"
            android:gravity="left|center_vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView17"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="contributors:"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="@color/colorPrimary"

                android:text="Stefano Dalla Palma" />

        </RelativeLayout>



    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
